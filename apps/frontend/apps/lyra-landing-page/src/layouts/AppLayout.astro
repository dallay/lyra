---
import Layout from './CommonLayout.astro';
import SideBar from 'molecules:SideBar';
// biome-ignore lint/correctness/noUnusedVariables: This is a false positive as the `title` and `description` variables are used in the Layout component below.
interface Props {
	title: string;
	description?: string;
}
// biome-ignore lint/correctness/noUnusedVariables: This is a false positive as the `title` and `description` variables are used in the Layout component below.
const { title, description } = Astro.props;
---

<Layout title={title} description={description}>
	<div
		class="text-tertiary-700 bg-tertiary-100 dark:bg-tertiary-950 dark:text-tertiary-300 min-h-svh antialiased"
	>
		<SideBar />
		<main class="h-auto p-4 pt-20 md:ml-64">
			<slot />
		</main>
	</div>
</Layout>
