---
import { Icon } from 'astro-icon/components';
import WorldGraph from '../atoms/WorldGraph.astro';
---

<div
	class="absolute right-1/2 top-0 z-40 hidden shrink-0 lg:flex lg:items-center lg:justify-center lg:right-1/3"
>
	<div
		class="from-primary-500 via-secondary-500 to-secondary-300 absolute h-[478px] min-h-[1em] w-1 self-stretch bg-gradient-to-t"
	>
	</div>
	<div
		class="from-primary-500 absolute top-0 h-[878px] w-80 rounded-b-full bg-opacity-20 bg-gradient-to-t opacity-20 blur-3xl"
	>
	</div>
	<div class="relative h-[478px] w-[166px] opacity-5">
		<Icon
			name="dot-grid-effect"
			class="text-tertiary-700 dark:text-tertiary-300 absolute left-0 top-0 h-full w-full rounded-full"
		/>
	</div>
	<div class="absolute left-0 top-full">
		<WorldGraph />
	</div>
</div>
