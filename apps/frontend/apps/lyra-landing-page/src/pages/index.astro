---
import Layout from 'layouts:StackedLayout';
import appInterface from '../assets/images/app-interface.png';
import Hero from 'molecules:Hero';
import ItemsSection from 'molecules:ItemsSection';
// biome-ignore lint/correctness/noUnusedVariables: This is a false positive as the `clientUrl` variable is used in the iframe below.
const clientUrl = import.meta.env.APP_CLIENT_URL;
---

<Layout title="Lyra App.">
	<main>
		<div class="flex min-h-screen flex-col">
			<Hero image={appInterface} />
			<ItemsSection />
			<div class="my-4 flex items-center justify-center">
				<iframe
					src={`${clientUrl}/forms/88e720ca-b04d-4e81-97ec-b7cbceda73db`}
					class="flex items-center justify-center"
					title="Subscribe to newsletter"
					id="lyra-embed"
					data-test-id="lyra-embed"
					width="100%"
					height="200"
					frameborder="0"
					scrolling="no"></iframe>
			</div>
		</div>
	</main>
</Layout>

<style>
	@media (prefers-color-scheme: dark) {
		iframe[src*='localhost'] {
			color-scheme: light;
		}
	}
</style>
