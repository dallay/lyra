---
import SubmitButton from '../atoms/SubmitButton.astro';
const { ...attributes } = Astro.props;
const { class: className = 'w-full max-w-md space-y-2 flex flex-col items-center justify-center' } =
	attributes;
---

<div class:list=`${className}`>
	<form class="flex space-x-2">
		<label>
			<input
				class="bg-background ring-offset-background placeholder:text-muted-foreground focus-visible:ring-ring flex h-10 w-full max-w-lg flex-1 rounded-md border border-gray-900 px-3 py-2 text-sm file:border-0 file:bg-transparent file:text-sm file:font-medium focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 dark:border-gray-100"
				placeholder="Enter your email"
				type="email"
			/>
		</label>
		<SubmitButton type="submit">Subscribe</SubmitButton>
	</form>
	<p class="text-tertiary-900 dark:text-tertiary-50 py-4 text-xs">
		Get ready to redefine your email experience.
		<a class="text-white underline underline-offset-2" href="#" rel="ugc">
			Terms &amp; Conditions
		</a>
	</p>
</div>
