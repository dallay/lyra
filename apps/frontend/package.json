{
  "name": "lyra",
  "version": "0.0.1",
  "description": "Lyra is a modern content management system for the web.",
  "author": {
    "name": "Yanier Acosta Pérez",
    "email": "yunielacosta738@gmail.com",
    "url": "www.yunielacosta.com"
  },
  "license": "MIT",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/yacosta738/lyra.git",
    "branch": "main"
  },
  "bugs": {
    "url": "https://github.com/yacosta738/lyra/issues"
  },
  "homepage": "lyra-nwhm.onrender.com",
  "scripts": {
    "update-deps": "pnpm update -i -r --latest",
    "preinstall": "npx only-allow pnpm",
    "setup": "pnpm install && pnpm exec playwright install",
    "postinstall": "syncpack fix-mismatches",
    "dev": "print \"DEV: 🟢 Starting ${npm_package_name} in dev mode\" && pnpm --recursive --parallel --stream run dev",
    "mock": "print \"MOCK: Starting the mock server \" warning && pnpm -C mock mock",
    "build:utilities": "pnpm -C packages/utilities build",
    "build:ui": "pnpm -C packages/ui build",
    "build:packages": "run-s build:utilities build:ui",
    "build:apps": "pnpm -C apps --recursive --parallel --stream run build",
    "build": "print \"BUILD: 🏗️  Building ${npm_package_name}\" info && run-s build:packages build:apps",
    "clean": "print \"CLEAN: 🧹 Cleaning ${npm_package_name}\" info && pnpm --recursive --parallel --stream run clean",
    "preview": "pnpm --recursive --parallel --stream run preview",
    "check": "print \"CHECK: ✅ Checking ${npm_package_name}\" && pnpm --recursive --parallel --stream run lint && pnpm --recursive --stream run check",
    "format": "print \"FORMAT: 🖌️ Formatting ${npm_package_name}\" && prettier --write . --plugin=prettier-plugin-astro",
    "lint": "print \"LINT: 🚨 Linting ${npm_package_name}\" && run-p lint:eslint lint:stylelint",
    "lint:eslint": "eslint --fix --ext .js,.jsx,.ts,.tsx,.astro,.vue --ignore-path .gitignore .",
    "lint:stylelint": "stylelint --fix \"**/*.{css,scss,sass}\" --allow-empty-input --config config/stylelint.config.cjs",
    "test": "print \"TEST: 🧪 Testing ${npm_package_name}\" && pnpm --recursive --parallel --stream run test"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@lyra/scripts": "0.0.1",
    "@playwright/test": "^1.42.1",
    "@types/bun": "latest",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.28",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitest/coverage-v8": "^1.4.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "astro-eslint-parser": "^0.16.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-prettier-vue": "^5.0.0",
    "eslint-plugin-vue": "^9.23.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.13.0",
    "flowbite": "^2.3.0",
    "happy-dom": "^13.8.6",
    "npm-run-all2": "^6.1.2",
    "postcss": "^8.4.35",
    "prettier": "3.2.5",
    "prettier-plugin-astro": "~0.13.0",
    "prettier-plugin-tailwindcss": "~0.5.12",
    "process-envify": "^2.0.0",
    "rimraf": "^5.0.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "syncpack": "^12.3.0",
    "unocss": "^0.58.6",
    "vite": "^5.1.6",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=18.14.1",
    "pnpm": ">=8.6.12"
  },
  "packageManager": "pnpm@8.14.1"
}
