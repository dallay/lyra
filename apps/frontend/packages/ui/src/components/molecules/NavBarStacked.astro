---
import LinkButton from "../atoms/LinkButton.astro";
import Logo from "../atoms/Logo.astro";
import ThemeSwitcher from "../atoms/ThemeSwitcher.astro";
import Drawer from "./Drawer.astro";

import { navMenus } from "@/models/Menu.ts";
import Menu from "./Menu.astro";

const drawerMenuId = "mobile-menu";
const ariaLabelledby = "mobile-menu-top-label";
---

<header id="header-nav" class="fixed w-screen z-50 top-0 lg:px-0">
  <div
    class="w-full flex-col justify-start items-center inline-flex px-2 sm:py-2"
  >
    <div class="container py-3 mx-auto">
      <div class="flex items-center justify-between mx-1">
        <div class="flex items-center justify-start">
          <Logo />
          <nav class="hidden sm:flex sm:ml-6">
            <Menu menus={navMenus} />
          </nav>
        </div>

        <div class="flex justify-items-center justify-center">
          <ThemeSwitcher class="hidden sm:flex " />
          <LinkButton secondary href="/login" class="hidden sm:flex mx-2">
            Login
          </LinkButton>
          <Drawer
            id={drawerMenuId}
            ariaLabelledby={ariaLabelledby}
          >
            <Logo slot="nav-title" />
            <Menu menus={navMenus}>
              <div slot="last-menu" class="flex flex-col">
                <hr
                  class="h-px my-2 bg-tertiary-700 border-0 dark:bg-tertiary-100"
                />
                <LinkButton secondary href="/login" class="my-2">
                  Login
                </LinkButton>
              </div>
            </Menu>
          </Drawer>
        </div>
      </div>
    </div>
  </div>
</header>
