---
import Layout from '@/layouts/StackedLayout.astro';
import appInterface from '../assets/images/app-interface.png';
import Hero from 'molecules:Hero';
import ItemsSection from 'molecules:ItemsSection';
---

<Layout title="Lyra App.">
	<main>
		<div class="flex min-h-screen flex-col">
			<Hero image={appInterface} />
			<ItemsSection />
			<div class="my-4 flex items-center justify-center p-4">
				<iframe
					src="http://localhost:9876/1e573ddd-f2cf-49b9-993f-a2d1535fd0cc"
					class="flex items-center justify-center"
					data-test-id="lyra-embed"
					width="100%"
					height="200"
					frameborder="0"
					scrolling="no"
					style="margin: 0; border-radius: 0px !important; background-color: transparent;"></iframe>
			</div>
		</div>
	</main>
</Layout>
