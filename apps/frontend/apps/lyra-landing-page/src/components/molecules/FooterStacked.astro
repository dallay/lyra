---
import { Icon } from 'astro-icon/components';
import Logo from '../atoms/Logo.astro';
import CopyrightNotice from '../atoms/CopyrightNotice.astro';
---

<footer
	class="border-tertiary-300 dark:border-tertiary-800 flex flex-col items-center justify-between border-t px-4 py-6 md:flex-row md:py-10 2xl:px-0"
>
	<Logo />
	<ul class="my-4 flex flex-wrap items-center justify-center md:my-0">
		<li
			class="bg-tertiary-200 dark:bg-tertiary-900 border-tertiary-300 dark:border-tertiary-800 mx-1 inline-flex h-12 w-12 items-center justify-center rounded border"
		>
			<a
				href="/"
				class="text-tertiary-800 hover:text-tertiary-900 dark:text-tertiary-400 dark:hover:text-tertiary-300"
			>
				<Icon name="simple-icons:instagram" class="h-8 w-8" />
			</a>
		</li>
		<li
			class="bg-tertiary-200 dark:bg-tertiary-900 border-tertiary-300 dark:border-tertiary-800 mx-1 inline-flex h-12 w-12 items-center justify-center rounded border"
		>
			<a
				href="https://discord.gg/zEEVgxAh"
				class="text-tertiary-800 hover:text-tertiary-900 dark:text-tertiary-400 dark:hover:text-tertiary-300"
			>
				<Icon name="ph:discord-logo" class="h-8 w-8" />
			</a>
		</li>
		<li
			class="bg-tertiary-200 dark:bg-tertiary-900 border-tertiary-300 dark:border-tertiary-800 mx-1 inline-flex h-12 w-12 items-center justify-center rounded border"
		>
			<a
				href="https://github.com/yacosta738/lyra"
				target="_blank"
				class="text-tertiary-800 hover:text-tertiary-900 dark:text-tertiary-400 dark:hover:text-tertiary-300"
			>
				<Icon name="ph:github-logo" class="h-8 w-8" />
			</a>
		</li>
	</ul>

	<CopyrightNotice />
</footer>
